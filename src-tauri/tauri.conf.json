{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Playa",
    "version": "0.1.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": "^((mailto:)|(tel:)|(https?://)|(C:)|(D:)).+",
        "sidecar": true,
        "scope": [
          {
            "name": "ffprobe",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "dialog": {
        "open": true,
        "message": true,
        "confirm": true,
        "save": true
      },
      "http": {
        "request": true,
        "scope": ["https://api4.thetvdb.com/v4/*", "https://www.googleapis.com/youtube/v3/*"]
      },
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPLOCALDATA/*"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "windows": [
      {
        "title": "Playa",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src  https://artworks.thetvdb.com/ 'self' asset: https://asset.localhost"
    },
    "bundle": {
      "active": true,
      "externalBin": [
        "binaries/ffprobe"
      ],
      "targets": "all",
      "identifier": "com.cliambrown.playa",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
