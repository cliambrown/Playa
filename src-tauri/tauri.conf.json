{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Playa",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": "^((mailto:)|(tel:)|(https?://)|(C:)|(D:)).+",
        "sidecar": true,
        "scope": [
          {
            "name": "ffprobe",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "dialog": {
        "open": true,
        "message": true
      },
      "http": {
        "request": true,
        "scope": ["https://api4.thetvdb.com/v4/*"]
      }
    },
    "windows": [
      {
        "title": "Playa",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "externalBin": [
        "binaries/ffprobe"
      ],
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
